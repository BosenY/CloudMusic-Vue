li
    list-style: none;
.tab-container
    .u-tab
        position: fixed;
        top: 64px;
        left: 0;
        z-index: 10;
        display: -webkit-box;
        display: flex;
        -webkit-box-pack: center;
        justify-content: center;
        -webkit-box-align: center;
        align-items: center;
        width: 100%;
        height: 40px;
        background: #fff;
        .tabtitle
            -webkit-box-flex: 1;
            flex: 1;
            width: 33.3%;
            height: 100%;
            text-align: center;
            .tabtxt
                color: #333;
                font-size: 15px;
                line-height: 40px;
                position: relative
                &:after
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: 0px;
                    z-index: 3;
                    width: 100%;
                    height: 3px;
                    -webkit-transform: scaleY(.5);
                    transform: scaleY(.5);
                    background: #ccc;
            .active
                color: #d33a31
                &:after
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: -1px;
                    z-index: 3;
                    width: 100%;
                    height: 4px;
                    -webkit-transform: scaleY(.5);
                    transform: scaleY(.5);
                    background: #d33a31;
    .tab-show
        margin-top: 104px;